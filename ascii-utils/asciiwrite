_bin="$( \
  dirname \
    "$( \
      command \
        -v \
	  "env")")"
_lib="$( \
  realpath \
    "${_bin}/../lib")"
_crash_bash="${_lib}/libcrash-bash/crash-bash"
_sourced \
  "${_crash_bash}" 2>/dev/null || \
  source \
    "${_crash_bash}"

# shellcheck disable=SC2034
_global_variables() {
  write_date=""
  in_file=""
  out_file=""
  color=""
  quiet=""
}

_requirements() {
  _check_cmd \
    'asciiview' \
    'aview'
  _check_cmd \
    'sdotool'
}

_get_conf_dir_path() {
  local \
    _dir
  _dir="${HOME}/.config/${app_name}"
  echo \
    "${_dir}"
}

_close_keyboard() {
  sdotool \
    key \
      back
}

_ascii_view_quit() {
  sleep \
    10
  sdotool \
    key \
      q
}

_encode() {
  local \
    _in="${1}" \
    _pic
  _msg_info \
    "in file: ${_in}"
  _pic="$( \
    cat \
      "${_in}")" || \
    true
  _msg_info \
    "pic size: ${#_pic}"
  _msg_info \
    "out file: ${_out}"
  if [ ! -e "${_out}" ] && \
     [[ "${_os}" == "Android" ]]; then
    touch \
      "${_out}" || \
    true
  fi
  echo \
    "${_pic:100:-30}" > \
    "${_out}"
}


_android_asciiwrite() {
  local \
    _in="${1}" \
    _out="${2}" \
     _tmp
  _tmp="$( \
    mktemp \
      --suffix=".txt")"
  _close_keyboard
  timeout \
    5 \
    asciiview \
      -minwidth 1000 \
      -minheight 1000 \
      "${_in}" 2>/dev/null 1&> \
    "${_tmp}" || 
    true
  _msg_info \
    "Out file: '${_out}', temporary file: '${_tmp}'."
  _encode \
    "${_tmp}"
}

_linux_asciiwrite() {
  local \
    _in="${1}" \
    _out="${2}" \
    _tmp
  _tmp="$( \
    mktemp \
      --suffix=".txt")"
  timeout \
    5 \
    asciiview \
      "${_in}" 2>/dev/null 1&> \
    "${_tmp}" || 
    true
  _encode \
    "${_tmp}"
}

_asciiwrite() {
  local \
    _in="${1}" \
    _out="${2}" \
    _os
  _os="$( \
    uname \
      -o)"
  if [[ "${_os}" == "Android" ]]; then
    "_android_asciiwrite" \
      "${_in}" \
      "${_out}"
  elif [[ "${_os}" == "GNU/Linux" ]]; then
    "_linux_asciiwrite" \
      "${_in}" \
      "${_out}"
  fi
}

_out_file_auto_detect(){
  local \
    _out='' \
    _in
  _in="$( \
    _get \
      "in" \
      "file")"
  if [[ "${_in}" != "" ]]; then
    _out="${_in}.txt"
  fi
  echo \
    "${_out}"
}

_set_overrides() {
  _set_override \
    "write" \
    "date" \
    "$(_get_date_human)"
  _set_override \
    "out" \
    "file" \
    "$(_out_file_auto_detect)"
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _exit="${1}" \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true

Converts an image into ASCII text.

Usage:
  ${app_name}
    [options]
    <in_file>
    (<out_file>)

  options:
     -h                   This message.
     -c                   Enable color output
     -v                   Enable verbose output
ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${_exit}"
}

# Shows configuration options.
_show_config() {
  _msg_info "${app_name} configuration"
  _msg_info "               Write date:   $(_get "write" "date")"
  _msg_info "                  In file:   $(_get "in" "file")"
  _msg_info "                 Out file:   $(_get "out" "file")"
}

_globals
_global_variables
_requirements
# shellcheck disable=SC2034
while \
  getopts \
    'cvh?' \
    arg; do
  case \
    "${arg}" in
    c) override_color="y" ;;
    v) override_quiet="n" ;;
    h|?) _set_overrides && \
         _usage \
           0 ;;
    *)
    _msg_error \
      "Invalid argument '${arg}'" \
      0
    _usage \
      1
    ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
if (( 0 == $# )); then
  _msg_error \
    "no input file" \
    0
  _set_overrides
  _usage \
    1
fi
if (( 0 < $# )); then
  _set \
    "in" \
    "file" \
    "$(realpath \
         "${1}")"
fi
if (( 1 < $# )); then
  _set \
    "out" \
    "file" \
    "${2}"
fi
_set_overrides
_config_user_init \
  "$( \
    _get \
      "app" \
      "name")"
_show_config
app_opts=(
  "$(_get \
       "in" \
       "file")"
  "$(_get \
       "out" \
       "file")"
)
_asciiwrite \
  "${app_opts[@]}"

# vim:set sw=2 sts=-1 et:
